---
import { Icon } from 'astro-icon/components';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

interface Service {
  name: string;
  price: string;
  description?: string;
  icon?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  services?: Service[];
  callToAction?: CallToAction;
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = '',
  subtitle = '',
  tagline = '',
  services = [],
  callToAction,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {
      services &&
        services.map(({ name, price, description, icon }) => (
          <div class="intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
            <div class="flex flex-col p-5 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow-sm hover:shadow-md transition-shadow h-full">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    {icon && (
                      <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center">
                        <Icon name={icon} class="w-4 h-4 text-primary" />
                      </div>
                    )}
                    <h3 class="font-semibold text-base leading-tight">{name}</h3>
                  </div>
                  {description && <p class="text-sm text-muted">{description}</p>}
                </div>
                <div class="text-right shrink-0">
                  <span class="text-lg font-bold text-primary">{price} &euro;</span>
                </div>
              </div>
            </div>
          </div>
        ))
    }
  </div>

  {
    callToAction && (
      <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
        <Button {...callToAction} />
      </div>
    )
  }
</WidgetWrapper>
